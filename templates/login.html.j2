{% extends 'layout.html.j2' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5">Connexion</h1>

    <div class="container">
        <div class="row">
            <div class="jumbotron col-sm-6 offset-sm-3">
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="name">Nom :</label><br/>
                        <input type="text" class="form-control" name="name" id="name" /><br/><br/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password :</label><br/>
                        <input type="password" class="form-control" name="password" id="password" /><br/><br/>
                    </div>
                    <input class="btn btn-success float-right" type="submit" value="Se connecter"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
